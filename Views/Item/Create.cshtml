@model landingpage.Models.Item

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/admin.cshtml";
}

<div class="cont mt-4">
    <h1 class="text-primary">Create</h1>
    <h4 class="text-secondary">Item</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <form asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label text-info"></label>
                    <input asp-for="Name" class="form-control form-control-lg" placeholder="Enter item name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Description" class="control-label text-info"></label>
                    <textarea asp-for="Description" class="form-control form-control-lg" placeholder="Enter item description" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Price" class="control-label text-info"></label>
                    <input asp-for="Price" type="number" step="0.01" class="form-control form-control-lg" placeholder="Enter item price" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Pimage" class="control-label text-info"></label>
                    <input asp-for="Pimage" type="file" class="form-control-file border border-info p-2 rounded" name="file" />
                    <span asp-validation-for="Pimage" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CatId" class="control-label text-info"></label>
                    <select asp-for="CatId" class="form-control form-control-lg" asp-items="ViewBag.CatId">
                        <option value="">Select a category</option>
                    </select>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" value="Create" class="btn btn-success btn-lg">Create</button>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary btn-lg">Back to List</a>
    </div>
</div>

<style>
    .cont {
        background-color: #f8f9fa;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 0 1rem rgba(0, 0, 0, 0.1);
    }

    .form-group {
        margin-bottom: 1.5rem;
        display: flex;
        justify-content: center;
        flex-direction: column;
    }

        .form-group input {
            height: 2.5rem;
        }

        .form-group button {
            width: 20%;
            height: 3rem;
            border-radius: 10px;
        }

    .form-control, .form-control-file, .form-control textarea {
        display: block;
        width: 100%;
        box-sizing: border-box;
    }

    .control-label {
        margin-bottom: .5rem;
        margin-right: 2rem;
        font-weight: bold;
        color: #007bff;
    }

    .form-control, .form-control-file {
        height: auto;
    }

    .form-control-file {
        border: 1px solid #007bff;
        border-radius: 0.25rem;
        padding: 0.5rem;
    }
</style>
